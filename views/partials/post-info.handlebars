<div class="card">
  <div class="card-header" href="/post/{{id}}">{{title}}
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{content}}</p>
      <footer class="blockquote-footer">Posted By {{user.username}} on {{created_at}}</footer>
    </blockquote>
  <a class="anchor-link" href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
</div>