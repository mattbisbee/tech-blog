<div class="card">
  <div class="card-header">
    <a class="text-info" href="/post/{{id}}">{{title}}</a>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{content}}</p>
      <footer class="blockquote-footer">Posted By {{user.username}} on {{created_at}}</footer>
    </blockquote>
  </div>
</div>