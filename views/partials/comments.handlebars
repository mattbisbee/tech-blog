<div class="comments">
  {{#each this}}
  <div class="card" style="width: 18rem;">
    <section class="comment card-body">
      <div class="meta">
      {{user.username}} on {{format_date created_at}}
      </div>

      <div class="text">
      {{comment_text}}
      </div>
    </section>
  </div>
  {{/each}}
</div>